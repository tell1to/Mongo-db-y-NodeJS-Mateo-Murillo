{{#if tasks}}
  <table class="table table-bordered table-hover table-dark">
    <thead>
      <tr>
        <th>NÂ°</th>
        <th>Titulo</th>
        <th>Descripcion</th>
        <th>Operaciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each tasks}}
        <tr>
          <td>{{@index}}</td>
          <td><strong>{{titulo}}</strong></td>
          <td>{{Descripcion}}</td>
          <td>
            {{#if done}}
              <a class="btn btn-success" href="/tasks/{{_id}}/toggleDone">Hecho</a>
            {{else}}
              <a class="btn btn-dark" href="/tasks/{{_id}}/toggleDone">No hecho</a>
            {{/if}}
            <a href="/tasks/{{_id}}/delete" class="btn btn-danger">
              Borrar
            </a>
            <a href="/tasks/{{_id}}/edit" class="btn btn-info">
              Editar
            </a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
      <h1>No hay Data</h1>
      <img src="/icons/empty.svg" class="w-75" />
    </div>
  </div>
{{/if}}